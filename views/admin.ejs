<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
    <div class="container">
        <h2>Registered Users & Subscribers</h2>
        <a href="/mainhome">Main Home</a>
        <table>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Member</th>
                <th>Subscribed</th>
                <th>Actions</th>
            </tr>
            <% users.forEach(function(user) { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.member ? 'Yes' : 'No' %></td>
                <td><%= user.subscribed ? 'Yes' : 'No' %></td>
                <td>
                    <a href="/admin/edit/<%= user.id %>">Edit</a>
                    <a href="/admin/delete/<%= user.id %>">Delete</a>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
</body>
<footer>
    <img src="/public/images/cupcake.png" alt="logo" class="coffee-icon">
    <p>&copy; 2024 Aroha Caf√© | Designed with care.</p>
</footer>
</html>





